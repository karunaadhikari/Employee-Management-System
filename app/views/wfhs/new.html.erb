<div class="col-12 grid-margin">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">WORK FROM HOME APPLICATION</h4>
      <%= simple_form_for @wfh do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
             <label class="col-sm-3 col-form-label">Availability From</label>
              <div class="col-sm-9">
                <%= f.input :availability_from, label: false, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
             <label class="col-sm-3 col-form-label">Availability To</label>
              <div class="col-sm-9">
                <%= f.input :availability_to, label: false, class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
             <label class="col-sm-3 col-form-label">Reason</label>
              <div class="col-sm-9">
                <%= f.input :reason, label: false, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
          </div>
        </div>
        <%= f.submit 'Submit Application', class: 'btn btn-primary me-2' %>
      <% end %>
    </div>
  </div>
</div>
