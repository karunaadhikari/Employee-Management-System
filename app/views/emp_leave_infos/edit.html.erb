<div class="col-12 grid-margin">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">LEAVE APPLICATION</h4>
      <%= simple_form_for @emp_leave_info do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row-md-4">
              <%= f.label :date_from %>
              <div class="col-sm-9">
                <%= f.text_field :date_from, placeholder: 'dd/mm/yy', autofocus: true, type: 'date', id: 'dateinput', autocomplete: 'date_from', class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row-md-4">
              <%= f.label :date_to %>
              <div class="col-sm-9">
                <%= f.text_field :date_to, placeholder: 'dd/mm/yy', autofocus: true, type: 'date', id: 'dateinput', autocomplete: 'date_from', class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
         <div class="col-md-6">
            <div class="form-group row-md-4">
              <%= f.label :reason %>
              <div class="col-sm-9">
                <%= f.text_area :reason, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group row">
              <div class="col-sm-9">
               <%= f.association :leave_info %>
              </div>
            </div>
          </div>
        </div>
        <div class="text-right">
          <%= f.submit 'Save Application', class: 'btn btn-primary me-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
