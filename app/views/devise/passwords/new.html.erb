<h6 class="fw-light">Forgot your password?</h6>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'pt-3'}) do |f| %>
  <%= render 'devise/shared/error_messages', resource: %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control form-control-lg', placeholder: 'Email' %>
  </div>

  <div class="mt-3">
    <%= f.submit 'SEND', class: 'btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn' %>
  </div>

  <div class="mt-4 fw-light">
    <%= link_to 'Sign In', new_session_path(resource_name) %>
  </div>
<% end %>
